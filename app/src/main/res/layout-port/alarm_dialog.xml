<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMyDarkGrey">


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogAlarmHour"
        android:textSize="25dp"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogWeekDay"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogStartPoint"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogDestinationPoint"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogTransportMode"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogGoalTime"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogPreparingTime"
        android:layout_margin="10dp"/>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMyLightGrey"
        android:weightSum="2">


        <Button
            android:text="Modyfikuj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bDialogAlarmModification"
            android:layout_weight="1" />

        <Button
            android:text="OK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bDialogOK"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
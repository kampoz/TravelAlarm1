<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dip"
    android:background="@color/colorMyDarkGrey">


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogAlarmHour"
        android:textSize="25dp"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogWeekDay"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogStartPoint"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogDestinationPoint"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogTransportMode"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogGoalTime"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogPreparingTime"
        android:layout_margin="10dp"/>

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyLightGrey"
        android:id="@+id/tvDialogTravelTime"
        android:layout_margin="10dp"/>

</LinearLayout>
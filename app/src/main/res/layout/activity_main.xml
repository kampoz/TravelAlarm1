<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="2">




    <com.mapbox.mapboxsdk.maps.MapView
        android:layout_weight="1"
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        mapbox:style_url="@string/style_emerald"
        mapbox:zoom="12"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@android:color/black">

        <fragment
            android:id="@+id/from_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.kaseka.boxmaptest1.CustomAutocompleteFragment"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#ffff00" />

        <fragment
            android:id="@+id/to_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.kaseka.boxmaptest1.CustomAutocompleteFragment"
            />

        <Button
            android:id="@+id/bStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START"
            android:padding="20dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="TU MA BYC CZAS PRZEJAZDU"
            android:id="@+id/tvRouteTime" />


    </LinearLayout>

</LinearLayout>
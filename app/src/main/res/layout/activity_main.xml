<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <com.mapbox.mapboxsdk.maps.MapView
            android:layout_weight="1"
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            mapbox:style_url="mapbox://styles/kampoz/cit3frch4005l2xovh4ok8a18"
            mapbox:zoom="6"/>

        <ScrollView
            android:layout_weight="1"
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@android:color/black">

                <fragment
                    android:id="@+id/from_autocomplete_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.kaseka.boxmaptest1.CustomAutocompleteFragment"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#ffff00" />

                <fragment
                    android:id="@+id/to_autocomplete_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.kaseka.boxmaptest1.CustomAutocompleteFragment"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/ibCarTransport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/car_gray"
                        android:background="#000000"/>

                    <ImageButton
                        android:id="@+id/ibPublicTransport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/bus_gray"
                        android:background="#000000"/>

                    <ImageButton
                        android:id="@+id/ibBicycleTransport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/bicycle_gray"
                        android:background="#000000"/>

                    <ImageButton
                        android:id="@+id/ibFootTransport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/walk_gray"
                        android:background="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <Button
                        android:id="@+id/bStart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Wyznacz trasę"
                        android:background="@color/colorMyYellow"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        />

                    <Button
                        android:id="@+id/bClean"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Wyczyść"
                        android:background="@color/colorMyOrange"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:padding="20dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:hint="TU MA BYC CZAS PRZEJAZDU"
                    android:id="@+id/tvRouteTime" />

                <Button
                    android:id="@+id/bDalej"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyYellow"
                    android:textColor="@color/black"
                    android:text="DALEJ"
                    android:padding="20dp"
                    android:layout_gravity="center_vertical"
                    />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
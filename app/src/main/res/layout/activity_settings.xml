<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAlarmSoundsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Alarm sounds"
            android:textColor="@color/colorMyWhite"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/llSound1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSound1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="Sound 1"
                android:textColor="@color/colorMyLightGreen"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibPlaySound1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:src="@drawable/ic_volume_mute_white_48dp">

            </ImageButton>

            <RadioButton
                android:id="@+id/rbSound1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorMyBlack"
                android:button="@null"
                android:buttonTint="@color/colorMyLightGreen"
                android:drawableRight="@android:drawable/btn_radio"
                android:textColor="@color/colorMyLightGreen"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSound2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSound2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="Sound 2"
                android:textColor="@color/colorMyLightGreen"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibPlaySound2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:src="@drawable/ic_volume_mute_white_48dp">
            </ImageButton>

            <RadioButton
                android:id="@+id/rbSound2"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_marginRight="20dp"
                android:background="@color/colorMyBlack"
                android:button="@null"
                android:buttonTint="@color/colorMyLightGreen"
                android:drawableRight="@android:drawable/btn_radio"
                android:textColor="@color/colorMyLightGreen"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSound3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSound3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="Sound 3"
                android:textColor="@color/colorMyLightGreen"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibPlaySound3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:src="@drawable/ic_volume_mute_white_48dp">

            </ImageButton>

            <RadioButton
                android:id="@+id/rbSound3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorMyBlack"
                android:button="@null"
                android:buttonTint="@color/colorMyLightGreen"
                android:drawableRight="@android:drawable/btn_radio"
                android:textColor="@color/colorMyLightGreen"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/bSetAlarmSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/selector_button_gray_pressed"
        android:text="Set alarm sound"
        android:textAllCaps="false"
        android:textSize="25dp" />
</LinearLayout>

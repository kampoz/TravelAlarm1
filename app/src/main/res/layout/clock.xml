<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/clock_circle_shape">

    <com.kaseka.boxmaptest1.ClockHandImageView
        android:id="@+id/ivHourHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hour_hand"
        android:layout_centerInParent="true"
        />

    <com.kaseka.boxmaptest1.ClockHandImageView
        android:id="@+id/ivMinuteHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/minute_hand"
        android:layout_centerInParent="true"/>

    <View
        android:id="@+id/vClockCenterCircle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/little_circle_shape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>

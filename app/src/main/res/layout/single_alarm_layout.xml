<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/colorMyDarkGrey"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/tvAlarmId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyWhite"
        />

    <TextView
        android:id="@+id/tvAlarmMhour"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMyWhite"/>




    <TextView
        android:id="@+id/tvAlarmDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textColor="@color/colorMyWhite"/>



    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />



    <Button
        android:id="@+id/bOnOffAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:background="@drawable/edit_button_shape"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        />

</LinearLayout>
